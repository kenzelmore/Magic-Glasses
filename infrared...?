import RPi.GPIO as GPIO
import time

# Set the GPIO mode and suppress warnings
GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)

# Define the pin to which the sensor is connected
IR_PIN = 14  # Replace 14 with the actual GPIO pin number

# Set up the GPIO pin for the sensor
GPIO.setup(IR_PIN, GPIO.IN)

# Function to detect motion
def motion_detection():
    while True:
        if GPIO.input(IR_PIN):
            print("Motion detected")
        else:
            print("No motion detected")
        time.sleep(0.1)  # Adjust sleep time as needed

# Run the motion detection function
if __name__ == '__main__':
    try:
        print("Starting infrared sensor")
        motion_detection()
    except KeyboardInterrupt:
        print("Exiting program")
    finally:
        GPIO.cleanup()
