import RPi.GPIO as GPIO
import time

# Define the pin numbers for the sensors
TRIG = 11
ECHO = 12
BUZZER = 13
MOTION = 18

def setup():
    GPIO.setmode(GPIO.BOARD)
    GPIO.setwarnings(False)
    GPIO.setup(TRIG, GPIO.OUT)
    GPIO.setup(ECHO, GPIO.IN)
    GPIO.setup(BUZZER, GPIO.OUT)
    GPIO.setup(MOTION, GPIO.IN)

def distance():
    # (existing distance function code)

def waitForMotion():
    while True:
        i = GPIO.input(MOTION)
        if i == 1:
            break

def waitForNoMotion():
    while True:
        i = GPIO.input(MOTION)
        if i == 0:
            break

def loop():
    try:
        while True:
            waitForMotion()
            dis = distance()
            print(f'Distance: {dis:.2f} inches')
            if dis <= 30:
                GPIO.output(BUZZER, GPIO.LOW)
            else:
                GPIO.output(BUZZER, GPIO.HIGH)
            waitForNoMotion()
    except KeyboardInterrupt:
        destroy()

def destroy():
    GPIO.cleanup()

if __name__ == "__main__":
    setup()
    try:
        loop()
    except KeyboardInterrupt:
        destroy()
